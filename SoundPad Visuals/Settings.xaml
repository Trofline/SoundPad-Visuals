<Window x:Class="SoundPad_Visuals.SettingsWindow"
          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings"
        Width="300"
        Height="249"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow">

    <StackPanel Margin="10">

        <Button Content="Scan Folder" Click="SelectFolder_Click" Margin="0,0,0,10"/>
        <TextBlock x:Name="FolderPathText" Text="No Folder Selected" Foreground="Gray" TextWrapping="Wrap"/>
        <Button Content="Scan Files" Click="ScanFiles_Click" Margin=" 0,10,0,0"/>

    </StackPanel>
</Window>